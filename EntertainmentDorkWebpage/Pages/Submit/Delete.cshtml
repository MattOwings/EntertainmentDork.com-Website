@page
@model EntertainmentDorkWebpage.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Submission.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Submission</h2>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Submission.FirstName">First Name: </label>
            <input asp-for="@Model.Submission.FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Submission.LastName">Last Name: </label>
            <input asp-for="@Model.Submission.LastName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Submission.Email">Email: </label>
            <input asp-for="@Model.Submission.Email" disabled class="form-control" />
        </div>
        <!--<div asp-validation-summary="All"></div>--> <!-- Custom error messages -->
        <div class="mb-3">
            <label asp-for="@Model.Submission.DiscordName">Discord Username: </label>
            <input asp-for="@Model.Submission.DiscordName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Submission.InstagramName">Instagram Username: </label>
            <input asp-for="@Model.Submission.InstagramName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Submission.Interests">Interests: </label>
            <input asp-for="@Model.Submission.Interests" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Submission.LinkToPastWork">Links to your work: </label>
            <input asp-for="@Model.Submission.LinkToPastWork" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}